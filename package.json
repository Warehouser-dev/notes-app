{
  "name": "notes-app",
  "version": "1.0.0",
  "description": "A simple desktop notes application",
  "main": "main.js",
  "scripts": {
    "webpack": "webpack --mode production",
    "webpack:dev": "webpack --mode development --watch",
    "start": "npm run webpack && electron .",
    "dev": "npm run webpack && electron .",
    "build": "npm run webpack && electron-builder",
    "lint": "eslint src/**/*.{js,jsx}"
  },
  "keywords": ["notes", "electron", "desktop"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "lucide-react": "^0.294.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "@babel/core": "^7.23.5",
    "@babel/preset-react": "^7.23.3",
    "babel-loader": "^9.1.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "eslint": "^8.55.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0"
  },
  "build": {
    "appId": "com.notesapp.app",
    "productName": "Notes",
    "mac": {
      "category": "public.app-category.productivity",
      "target": ["dmg"],
      "icon": "build/icon.icns"
    },
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "styles.css",
      "dist/**/*"
    ],
    "directories": {
      "buildResources": "build",
      "output": "release"
    }
  }
}
